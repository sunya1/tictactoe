<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Game">


    <ImageView
        android:id="@+id/square1"
        android:layout_width="110dp"
        android:layout_height="132dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:background="#FFEB3B"
        android:contentDescription="TODO"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/square4"
        app:layout_constraintEnd_toStartOf="@+id/square2"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/square2"
        android:layout_width="110dp"
        android:layout_height="132dp"
        android:layout_marginBottom="24dp"
        android:background="#FFEB3B"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/square5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/square3"
        android:layout_width="110dp"
        android:layout_height="132dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="24dp"
        android:background="#FFEB3B"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/square6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/square2"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/square4"
        android:layout_width="110dp"
        android:layout_height="132dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:background="#FFEB3B"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/square7"
        app:layout_constraintEnd_toStartOf="@+id/square5"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/square5"
        android:layout_width="110dp"
        android:layout_height="132dp"
        android:layout_marginBottom="24dp"
        android:background="#FFEB3B"
        android:contentDescription="TODO"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/square8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/square6"
        android:layout_width="110dp"
        android:layout_height="132dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="24dp"
        android:background="#FFEB3B"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/square9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/square5"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/square7"
        android:layout_width="110dp"
        android:layout_height="132dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="28dp"
        android:background="#FFEB3B"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/square8"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/square8"
        android:layout_width="110dp"
        android:layout_height="132dp"
        android:layout_marginBottom="28dp"
        android:background="#FFEB3B"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/square9"
        android:layout_width="110dp"
        android:layout_height="132dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="28dp"
        android:background="#FFEB3B"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/square8"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewOfTurn"
        android:layout_width="159dp"
        android:layout_height="44dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="It Is Your Turn"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/users_turn"
        android:layout_width="128dp"
        android:layout_height="44dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="username"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/textViewOfTurn"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/continue_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:text="Continue"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>